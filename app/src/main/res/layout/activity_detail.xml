<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kaungkhantthu.xyz.littlebakery.activity.DetailActivity">

    <include layout="@layout/mtoolbar"/>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_cake"
                    android:layout_width="match_parent"

                    android:layout_height="160dp"

                    tools:src="@drawable/birthday_cake"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_cake"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_medium_3"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_regular_2"
                        tools:text="Birthday Cake" />
                    <TextView
                        android:id="@+id/txt_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/margin_medium_3"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_regular_2"
                        tools:text="4000$" />
                </LinearLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title_Des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_medium_3"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_regular_2"
                    android:text="Description"/>

                <TextView
                    android:id="@+id/txt_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_Des"
                    android:textSize="@dimen/text_regular"
                    android:layout_marginLeft="@dimen/margin_medium_3"
                    android:layout_marginRight="@dimen/margin_medium_3"
                    android:layout_marginBottom="@dimen/margin_medium_3"
                    tools:text="sdjnjcnscnscjsncjscjnsncsccjsncjsnjcnsjncsjncsnjcccccjscnsjcnsjncjsncsncsncncnncncncncnc"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title_Ingre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_medium_3"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_regular_2"
                    android:text="Ingredient"/>

                <TextView
                    android:id="@+id/txt_ingredient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_Ingre"
                    android:textSize="@dimen/text_regular"
                    android:layout_marginLeft="@dimen/margin_medium_3"
                    android:layout_marginRight="@dimen/margin_medium_3"
                    android:layout_marginBottom="@dimen/margin_medium_3"
                    tools:text="sdjnjcnscnscjsncjscjnsncsccjsncjsnjcnsjncsjncsnjcccccjscnsjcnsjncjsncsncsncncnncncncncnc"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title_Nutri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_medium_3"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_regular_2"
                    android:text="Nutrition Facts"/>


                <TextView
                    android:id="@+id/txt_nutritioncalories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_Nutri"
                    android:textSize="@dimen/text_regular"
                    android:layout_marginLeft="@dimen/margin_medium_3"
                    android:layout_marginRight="@dimen/margin_medium_3"
                    tools:text="fat 30"/>

                <TextView
                    android:id="@+id/txt_nutritionfat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_nutritioncalories"
                    android:textSize="@dimen/text_regular"
                    android:layout_marginLeft="@dimen/margin_medium_3"
                    android:layout_marginRight="@dimen/margin_medium_3"

                    tools:text="fat 30"/>

                <TextView
                    android:id="@+id/txt_nutritioncholestrol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_regular"
                    android:layout_marginLeft="@dimen/margin_medium_3"
                    android:layout_marginRight="@dimen/margin_medium_3"
                    android:layout_below="@id/txt_nutritionfat"
                    tools:text="fat 30"/>

                <TextView
                    android:id="@+id/txt_nutritionprotein"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_regular"
                    android:layout_marginLeft="@dimen/margin_medium_3"
                    android:layout_marginRight="@dimen/margin_medium_3"
                    android:layout_below="@id/txt_nutritioncholestrol"
                    tools:text="fat 30"/>

                <TextView
                    android:id="@+id/txt_nutritionsugar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_regular"
                    android:layout_marginLeft="@dimen/margin_medium_3"
                    android:layout_marginRight="@dimen/margin_medium_3"
                    android:layout_marginBottom="@dimen/margin_medium_3"
                    android:layout_below="@id/txt_nutritionprotein"
                    tools:text="fat 30"/>


            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>


</LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/ic_add_black_24dp" />
</android.support.design.widget.CoordinatorLayout>