<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_medium"
    xmlns:android="http://schemas.android.com/apk/res/android">

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_medium"
    >

    <ImageView
        android:id="@+id/order_image"
        android:layout_width="100dp"
        android:layout_height="80dp"
        tools:src="@drawable/cookie"/>
    <TextView
        android:id="@+id/order_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_heading_1x"
        android:layout_margin="@dimen/margin_medium"
        app:layout_constraintLeft_toRightOf="@id/order_image"
        tools:text = "Cookie" />

    <TextView
        android:id="@+id/order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"
        android:textSize="@dimen/text_regular"
        app:layout_constraintTop_toBottomOf="@id/order_name"
        app:layout_constraintLeft_toRightOf="@id/order_image"
        tools:text = "Price:3000"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="18dp" />

    <TextView
        android:id="@+id/order_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"
        android:textSize="@dimen/text_regular"
        app:layout_constraintRight_toRightOf="parent"
        tools:text = "gg" />

    <ImageView
        android:id="@+id/imgbtn_minus"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/minussign"
        app:layout_editor_absoluteX="274dp"
        android:layout_margin="@dimen/margin_medium"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/imgbtn_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_black_24dp"
        app:layout_editor_absoluteX="274dp"
        app:layout_constraintRight_toLeftOf="@id/imgbtn_minus"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        tools:ignore="MissingConstraints" />
</android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>