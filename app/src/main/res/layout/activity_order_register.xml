<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kaungkhantthu.xyz.littlebakery.activity.OrderRegisterActivity">

    <include android:id="@+id/toolbarlayout" layout="@layout/mtoolbar"/>


    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium_3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <EditText
            android:id="@+id/edtext_name"
            android:drawableRight="@drawable/ic_close_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium"
            android:hint="Name"
            android:background="@android:color/transparent"/>




        <EditText
            android:id="@+id/edtext_phnumber"
            android:drawableRight="@drawable/ic_close_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium"
            android:hint="Phone Number"
            android:inputType="number"
            android:background="@android:color/transparent"/>



        <TextView
            android:id="@+id/txt_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="datetime"
            android:layout_margin="@dimen/margin_medium"
            android:text="Delivery Date"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_regular_3"
            android:background="@android:color/transparent"/>

        <EditText
            android:id="@+id/edtext_address"
            android:drawableRight="@drawable/ic_close_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="@dimen/margin_medium"
            android:hint="Delivery Address"
            android:background="@android:color/transparent"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <Button
        android:id="@+id/btn_confrim"
        android:layout_margin="@dimen/margin_medium_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="confirm"
        android:layout_gravity="right"/>
</LinearLayout>
